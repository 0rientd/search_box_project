<%= turbo_frame_tag "last_queries" do %>
  <% if articles.any? %>
    <div class="w-1/4 bg-white flex flex-col pr-2 pt-2 rounded-lg shadow-lg mt-2 absolute">
      <% articles.each do |article| %>
        <div class="p-4 mb-2 ml-2 rounded shadow cursor-pointer hover:bg-gray-100" 
             onclick="document.getElementById('search_query_term').value='<%= article.title %>'">
          <h2 class="text-xl font-semibold"><%= article.title %></h2>
        </div>
      <% end %>
    </div>
    <% end %>
<% end %>